<ClockWidget>:
	canvas:
        Rectangle:
        	id: container
            pos: self.center_x - self.width*0.25, self.center_y - self.height*0.15
            size: self.width*0.5, self.height*0.3

	Label:
		size_hint_y: 0.2
		text: '20:19'
		font_size: self.height 
		center_x: root.center_x
		center_y: root.center_y
		color: 0,0,0,1